<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_clear"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <!-- everything you already have -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2px"
            android:text="Main Menu"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />


        <TextView
            android:id="@+id/txtMemberID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="MemberID"
            android:textColor="#0000CC"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:text="Username"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <Button
            android:id="@+id/b_Page_Spinner_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#ff0a0a"
            android:ems="15"
            android:text="Page_Spinner_Category"
            android:textStyle="bold"
            android:visibility="gone" />


        <Button
            android:id="@+id/b_Add_Car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Add Car"
            android:textAppearance="@android:style/TextAppearance.Inverse" />

        <Button
            android:id="@+id/b_Show_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="View Aviable car"
            android:textAppearance="@android:style/TextAppearance.Inverse"
            android:visibility="visible" />

        <Button
            android:id="@+id/b_Show_Order_All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Manage Booking List"
            android:textAppearance="@android:style/TextAppearance.Inverse" />

        <Button
            android:id="@+id/manage_member_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Manage Member Account"
            android:textAppearance="@android:style/TextAppearance.Inverse" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Report / Static"
            android:textAppearance="@android:style/TextAppearance.Inverse" />

        <Button
            android:id="@+id/Logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Logout"
            android:textAppearance="@android:style/TextAppearance.Inverse" />

        <Button

            android:id="@+id/exitApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="ออกจากแอพลิเคชั่น"
            android:textAppearance="@android:style/TextAppearance.Inverse"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>

